{{#if err}}
  <p>{{err}}</p>
{{/if}}

<form action="/sessions/login" method="post">
  <div>
    <label for="email">Email</label>
    <input type="email" name="email">
  </div>

  <div>
    <label for="password">Password</label>
    <input type="password" name="password" pattern=".{6,}">
  </div>

  <input type="submit" value="Submit">
</form>
