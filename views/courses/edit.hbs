<h1>Edit Course</h1>

<div class="row">
    <form action="/users/{{user.id}}/courses/{{course.id}}?_method=PATCH" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="courseName">Course Name:</label>
            <input type="text" name="courseName" class="form-control" value="{{course.courseName}}"/>
        </div>
        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" name="city" class="form-control" value="{{course.city}}"/>
        </div>
        <div class="form-group">
            <label for="state">State:</label>
            <input type="text" name="state" class="form-control" value="{{course.state}}"/>
        </div>
        <div class="form-group">
            <label for="par">Course Par:</label>
            <input type="text" name="par" class="form-control" value="{{course.par}}"/>
        </div>
         <div class="form-group">
            <label for="myScore">My Score:</label>
            <input type="text" name="myScore" class="form-control" value="{{course.myScore}}"/>
        </div>
         <div class="form-group">
            <label for="ball">Ball Used:</label>
            <input type="text" name="ball" class="form-control" value="{{course.ball}}"/>
        </div>
         <div class="form-group">
            <label for="comments">Comments:</label>
            <input type="text" name="comments" class="form-control" value="{{course.comments}}"/>
        </div>
        <div class="form-group">
            <label for="datePlayed">Date Played:</label>
            <input type="text" name="datePlayed" class="form-control" value="{{course.datePlayed}}"/>
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-default"/>
        </div>
    </form>
</div>

