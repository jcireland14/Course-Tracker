<h1>Edit Course</h1>

<div class="row">
    <form action="/users/{{user.id}}/courses/{{course.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="course_name">Course Name:</label>
            <input type="text" name="course_name" class="form-control" value="{{course.course_name}}">
        </div>
        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" name="city" class="form-control" value="{{course.city}}">
        </div>
        <div class="form-group">
            <label for="state">State:</label>
            <input type="text" name="state" class="form-control" value="{{course.state}}">
        </div>
        <div class="form-group">
            <label for="par">Par:</label>
            <input type="text" name="par" class="form-control" value="{{course.par}}">
        </div>
        <div class="form-group">
            <label for="date_played">Date Played:</label>
            <input type="text" name="date_played" class="form-control" value="{{course.date_played}}">
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>

